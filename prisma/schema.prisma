// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Goat {
  id          Int      @id @default(autoincrement())
  name        String
  breed       String
  age         String
  weight      String
  price       Decimal  @db.Decimal(10, 2)
  description String?
  imageUrl    String?
  isAvailable Boolean  @default(true)
  gender      String
  color       String?
  healthStatus String  @default("Healthy")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("goats")
}

model ContactMessage {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  subject   String?
  message   String
  createdAt DateTime @default(now())

  @@map("contact_messages")
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  videoUrl    String   // URL to the video file
  thumbnailUrl String? // Optional thumbnail image
  likesCount  Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  likes       VideoLike[]

  @@map("videos")
}

model VideoLike {
  id        Int      @id @default(autoincrement())
  videoId   Int
  deviceId  String   // Store unique device ID to track likes per device
  createdAt DateTime @default(now())

  // Relations
  video     Video    @relation(fields: [videoId], references: [id], onDelete: Cascade)

  // Unique constraint to prevent duplicate likes from same device
  @@unique([videoId, deviceId])
  @@map("video_likes")
}